GITHUB_TOKEN=seu_token_aqui
GITHUB_REPO=camargommc2021-star/controledeindica-es

# Configurações de Logging
# Nível de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Diretório e arquivo de log
LOG_DIR=logs
LOG_FILE=app.log

# Tamanho máximo do arquivo de log em bytes (padrão: 5MB)
LOG_MAX_BYTES=5242880

# Número de arquivos de backup a manter
LOG_BACKUP_COUNT=5

# Formato do log (opcional)
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Desabilitar log no console (defina como 'false' para desabilitar)
# LOG_CONSOLE=true
